{% extends 'base.html.twig' %}
    {% block title %}Modifier le planning{% endblock %}


{% block javascripts %}
{% endblock %}


{% block Hero_Section_Begin %}
{% endblock %}
    {% block stylesheets %}
        <style>
            .card {
                max-width: 900px;
                margin: 150px auto 0 auto;
                box-shadow: 0 2px 10px rgba(255, 255, 255, 0.4);
                border: none;
            }
            .card-body {
                padding: 2rem;
            }
            .invalid-feedback {
                display: block !important;
                color: #dc3545;
            }
            body {
                background: #151515 !important;
            }
        </style>
    {% endblock %}

    {% block body %}
        <div class="container mt-4">
            <h2 class="text-center mb-4" style="color: white; position: relative; top: 110px;">
                Modifier le planning
            </h2>
            <div class="card">
                <div class="card-body">
                    {# L'action du formulaire pointe ici vers la route update avec l'id du planning #}
                    {{ form_start(form,{'action': path('app_planning_update', {'id': planning.id}),'attr': {'novalidate': 'novalidate', 'class': 'modal-form'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <img class="img-fluid rounded w-100" src="{{ asset('img/plan.jpg') }}" alt="Image du planning">
                        </div>
                        <div class="col-md-6">
                            {# Champ Titre #}
                            <div class="mb-3">
                                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback" style="display: block">
                                    {{ form_errors(form.titre) }}
                                </div>
                            </div>
                            {# Champ Tarif #}
                            <div class="mb-3">
                                {{ form_label(form.tarif, 'Tarif', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.tarif, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback" style="display: block">
                                    {{ form_errors(form.tarif) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 text-center">
                        <button type="submit" class="btn btn-primary" style="background-color: #ff6600; border: 1px solid #ff6600">
                            Modifier
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% endblock %}
