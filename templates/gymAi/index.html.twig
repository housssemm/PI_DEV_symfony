{% block css %}
    {{ parent() }}
    <style>
        body {
            background-color: #151515;
            color: #f1f1f1;
            font-family: 'Segoe UI', sans-serif;
        }

        .breadcrumb-section {
            position: relative;
            background-color: #151515;
        }

        .breadcrumb-section::before {
            content: "";
            background-color: rgba(21, 21, 21, 0.6); /* Superposition sombre */
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            z-index: 1;
        }

        .breadcrumb-text {
            position: relative;
            z-index: 2;
            color: #fff;
        }

        .breadcrumb-text h2,
        .breadcrumb-text a,
        .breadcrumb-text span {
            color: #fff;
        }

        .gym-program {
            background: #1e1e1e;
            padding: 20px;
            border-radius: 15px;
            margin-top: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        .gym-program h2.day-title {
            color: #ffcc00;
            margin-top: 25px;
            border-bottom: 2px solid #ffcc00;
            padding-bottom: 10px;
        }

        .gym-program table.exercise-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #1a1a1a;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
            color: #f1f1f1;
        }

        .gym-program th, .gym-program td {
            border: 1px solid #444;
            padding: 12px;
            text-align: center;
        }

        .gym-program th {
            background-color: #333;
            color: #ffcc00;
            font-weight: bold;
        }

        .gym-program tr:nth-child(even) {
            background-color: #222;
        }

        .exercise-name {
            font-weight: bold;
            color: #4caf50;
        }

        .exercise-sets, .exercise-repetitions, .exercise-rest {
            color: #cccccc;
        }

        .exercise-notes {
            font-style: italic;
            color: #aaaaaa;
        }

        .exercise-img {
            max-width: 80px;
            height: auto;
            vertical-align: middle;
        }

        form {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            color: #fff;
            margin-top: 30px;
        }

        form input, form select, form textarea {
            background-color: #2c2c2c;
            color: #fff;
            border: 1px solid #444;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        form label {
            color: #ccc;
            font-weight: bold;
        }

        form button, form input[type="submit"] {
            background-color: #FA8200;
            color: #000;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        form button:hover, form input[type="submit"]:hover {
            background-color: #e6b800;
        }
        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin-top: 30px;
            margin-bottom: 20px;
            color: #FA8200;
            text-shadow: 0 2px 10px rgba(250, 130, 0, 0.3);
        }


    </style>
{% endblock %}
