
{% extends 'base.html.twig' %}

{% block title %}Programme de Gym Personnalisé {% endblock %}
{% block Hero_Section_Begin %}
    <section class="breadcrumb-section set-bg" data-setbg="img/AI-Workout-Generater.png">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Events</h2>
                        <div class="bt-option">
                            <a href="./index.html">Home</a>
                            <span>Events</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block body %}
    <h1 class="page-title">Programme de Gym Personnalisé</h1>
    {% if program %}
        <div class="gym-program">
            {{ program|raw }}
        </div>
    {% else %}
        <p>Veuillez remplir le formulaire pour générer votre programme.</p>
        {{ form(form) }}
    {% endif %}
{% endblock %}

