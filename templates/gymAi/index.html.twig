{% extends 'base.html.twig' %}

{% block title %}Programme de Gym Personnalis√©{% endblock %}

{% block body %}
    <h1>Votre Programme de Gym Personnalis√©</h1>

    {% if program %}
        <div class="gym-program">
            {{ program|raw }}
        </div>
    {% else %}
        <p>Veuillez remplir le formulaire pour g√©n√©rer votre programme.</p>
        {{ form(form) }}
    {% endif %}
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .gym-program {
            font-family: 'Segoe UI', sans-serif;
            background: #f8f9fa;
            padding: 20px;
            border-radius: 15px;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .gym-program h2.day-title {
            color: #007bff;
            margin-top: 25px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }

        .gym-program table.exercise-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .gym-program th, .gym-program td {
            border: 1px solid #dee2e6;
            padding: 12px;
            text-align: center;
        }

        .gym-program th {
            background-color: #e9ecef;
            font-weight: bold;
        }

        .gym-program tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        /* Styles sp√©cifiques pour les cellules */
        .exercise-name {
            font-weight: bold;
            color: #28a745;
        }

        .exercise-sets, .exercise-repetitions, .exercise-rest {
            color: #6c757d;
        }

        .exercise-notes {
            font-style: italic;
            color: #555;
        }
        .exercise-img {
            max-width: 80px;
            height: auto;
            vertical-align: middle;
        }
    </style>
{% endblock %}