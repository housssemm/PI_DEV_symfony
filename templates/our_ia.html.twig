{% extends 'base.html.twig' %}

{% block title %}Our IA{% endblock %}
{% block Hero_Section_Begin %}
    <section class="breadcrumb-section" style="
            background-image: url('{{ asset('img/IA-coach-sport.jpeg') }}');
            background-size: cover;
            background-position: top center;
            background-repeat: no-repeat;
            height: 400px;
            /*margin-top: 100px;*/
            padding: 0;
            ">

    </section>
{% endblock %}
{% block body %}
<style>
.our-ia-bg {
    background: #151515;
    min-height: 100vh;
    padding: 40px 0;
}
.our-ia-title {
    color: #fff;
    text-align: center;
    margin-bottom: 32px;
    font-size: 2.5rem;
    font-weight: bold;
}
.our-ia-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 32px;
    padding: 0 32px;
}
.our-ia-card {
    background: #222;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0,0,0,0.4);
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    text-decoration: none;
}
.our-ia-card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 8px 32px rgba(0,0,0,0.6);
    background: #1a1a1a;
}
.our-ia-card-img {
    width: 100%;
    height: 180px;
    object-fit: cover;
}
.our-ia-card-content {
    padding: 24px;
    text-align: center;
}
.our-ia-card-title {
    color: #fff;
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 12px;
}
.our-ia-card-desc {
    color: #bbb;
    font-size: 1rem;
}
</style>
<div class="our-ia-bg">
    <div class="our-ia-title">Our IA</div>
    <div class="our-ia-grid">
        {% for card in cards %}
            <a href="{{ path(card.path) }}" class="our-ia-card">
                <img src="{{ asset(card.img) }}" alt="{{ card.title }}" class="our-ia-card-img">
                <div class="our-ia-card-content">
                    <div class="our-ia-card-title">{{ card.title }}</div>
                    <div class="our-ia-card-desc">{{ card.description }}</div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>
{% endblock %} 