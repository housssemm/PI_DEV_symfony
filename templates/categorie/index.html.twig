{% block body %}
    <section>
        <div class="container my-5">
            <h1 class="text-center mb-4 fs-4 text-light">Liste des Catégories</h1>
            <div class="mb-3" style="text-align: right;">
                <a href="{{ path('app_ajouter_categorie') }}" class="btn btn-orange">
                    <i class="fa fa-plus"></i>  Ajouter Categorie
                </a>
            </div>
            <div class="row row-cols-1 row-cols-md-5 g-4" style="row-gap: 20px;" id="categoriesList">
                {% for categorie in categories %}
                    <div class="col-auto category-card">
                        <div class="card h-100 text-center bg-dark text-light" style="min-height: 250px; width: 220px; margin: auto; padding: 20px; border-radius: 12px; box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1); transition: transform 0.3s, box-shadow 0.3s; display: flex; flex-direction: column; align-items: center; justify-content: space-between;">
                            <img src="{{ asset('img/' ~ categorie.image) }}"
                                 class="card-img-top" alt="{{ categorie.nom }}"
                                 style="height: 120px; width: 100%; object-fit: contain; padding-top: 10px;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center" style="flex-grow: 1;">
                                <h5 class="card-title text-white">{{ categorie.nom }}</h5>
                            </div>
                            <div class="d-flex justify-content-center align-items-center w-100" style="gap: 10px; margin-top: 10px;">
                                <a href="{{ path('app_modifier_categorie', { id: categorie.id }) }}" class="btn btn-sm btn-orange">
                                    <i class="fa fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('app_supprimer_categorie', { id: categorie.id }) }}" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center text-light">Aucune catégorie trouvée.</p>
                {% endfor %}
            </div>
        </div>
    </section>

    <style>
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(255, 255, 255, 0.3);
        }
        .btn-orange {
            background-color: #f36100;
            color: white;
        }
        .btn-orange:hover {
            background-color: #d95400;
        }
    </style>
{% endblock %}










