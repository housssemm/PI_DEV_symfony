{% extends 'base.html.twig' %}

{% block title %}New Progress Post
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card" style="background-color: #151515; border: 1px solid #333;">
					<div class="card-header" style="background-color: #1a1a1a; border-bottom: 1px solid #333;">
						<h1 class="text-center mb-0" style="color: #FA8200;">Create New Progress Post</h1>
					</div>
					<div class="card-body">
						{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
						<div class="mb-3">
							{{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label text-white'}}) }}
							{{ form_widget(form.title, {'attr': {'class': 'form-control', 'style': 'background-color: #1a1a1a; border: 1px solid #333; color: #fff;'}}) }}
							{{ form_errors(form.title) }}
						</div>

						<div class="mb-3">
							{{ form_label(form.content, 'Content', {'label_attr': {'class': 'form-label text-white'}}) }}
							{{ form_widget(form.content, {'attr': {'class': 'form-control', 'style': 'background-color: #1a1a1a; border: 1px solid #333; color: #fff;', 'rows': '5'}}) }}
							{{ form_errors(form.content) }}
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_label(form.currentWeight, 'Current Weight (kg)', {'label_attr': {'class': 'form-label text-white'}}) }}
								{{ form_widget(form.currentWeight, {'attr': {'class': 'form-control', 'style': 'background-color: #1a1a1a; border: 1px solid #333; color: #fff;'}}) }}
								{{ form_errors(form.currentWeight) }}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_label(form.goalWeight, 'Goal Weight (kg)', {'label_attr': {'class': 'form-label text-white'}}) }}
								{{ form_widget(form.goalWeight, {'attr': {'class': 'form-control', 'style': 'background-color: #1a1a1a; border: 1px solid #333; color: #fff;'}}) }}
								{{ form_errors(form.goalWeight) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								<div class="image-upload-container" style="background-color: #1a1a1a; border: 2px dashed #333; border-radius: 10px; padding: 1rem; text-align: center;">
									{{ form_label(form.beforeImage, 'Before Image', {'label_attr': {'class': 'form-label text-white'}}) }}
									{{ form_widget(form.beforeImage, {'attr': {'class': 'form-control', 'style': 'background-color: #1a1a1a; border: 1px solid #333; color: #fff;'}}) }}
									{{ form_errors(form.beforeImage) }}
									<div class="mt-2">
										<i class="fas fa-upload fa-2x text-secondary"></i>
										<p class="text-white-50 mb-0">Upload your before image</p>
									</div>
								</div>
							</div>

							<div class="col-md-6 mb-3">
								<div class="image-upload-container" style="background-color: #1a1a1a; border: 2px dashed #333; border-radius: 10px; padding: 1rem; text-align: center;">
									{{ form_label(form.afterImage, 'After Image', {'label_attr': {'class': 'form-label text-white'}}) }}
									{{ form_widget(form.afterImage, {'attr': {'class': 'form-control', 'style': 'background-color: #1a1a1a; border: 1px solid #333; color: #fff;'}}) }}
									{{ form_errors(form.afterImage) }}
									<div class="mt-2">
										<i class="fas fa-upload fa-2x text-secondary"></i>
										<p class="text-white-50 mb-0">Upload your after image</p>
									</div>
								</div>
							</div>
						</div>

						<div class="mb-3 form-check">
							{{ form_widget(form.isPublic, {'attr': {'class': 'form-check-input'}}) }}
							{{ form_label(form.isPublic, 'Make this post public', {'label_attr': {'class': 'form-check-label text-white'}}) }}
							{{ form_errors(form.isPublic) }}
						</div>

						<div class="d-flex justify-content-between">
							<a href="{{ path('app_progress_index') }}" class="btn" style="background-color: #333; color: #fff; border: 1px solid #444;">
								<i class="fas fa-arrow-left"></i>
								Back to list
							</a>
							<button type="submit" class="btn" style="background-color: #FA8200; color: #fff; border: none;">
								<i class="fas fa-save"></i>
								Create Post
							</button>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		body {
			background-color: #151515;
		}
		.form-control:focus {
			background-color: #1a1a1a;
			border-color: #FA8200;
			color: #fff;
			box-shadow: 0 0 0 0.25rem rgba(250, 130, 0, 0.25);
		}
		.form-control::file-selector-button {
			background-color: #333;
			color: #fff;
			border: 1px solid #444;
		}
		.form-control::file-selector-button:hover {
			background-color: #444;
		}
		.btn:hover {
			opacity: 0.9;
		}
		.form-check-input:checked {
			background-color: #FA8200;
			border-color: #FA8200;
		}
		.image-upload-container {
			transition: border-color 0.3s ease;
		}
		.image-upload-container:hover {
			border-color: #FA8200;
		}
	</style>
{% endblock %}
