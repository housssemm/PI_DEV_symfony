{% extends 'base.html.twig' %}

{% block title %}Modifier le Plat{% endblock %}
{% block Hero_Section_Begin %}

    <section class="breadcrumb-section" style="
            background-image: url('{{ asset('img/rec.png') }}');
            background-size: cover;
            background-position: top center;
            background-repeat: no-repeat;
            height: 600px;
            /*margin-top: 100px;*/
            padding: 0;
            ">

    </section>


{% endblock %}
{% block body %}
    <style>
        body {
            background: #151515;
            color: #e2e8f0;
            font-family: 'Poppins', sans-serif;
        }
        
        .container {
            max-width: 1200px;
        }
        
        h1 {
            color: #ff7e2e;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            position: relative;
            display: inline-block;
        }
        
        h1:after {
            content: '';
            position: absolute;
            width: 60%;
            height: 4px;
            background: linear-gradient(90deg, #f36100, #ff7e2e);
            bottom: -10px;
            left: 0;
            border-radius: 2px;
        }
        
        .card {
            background: #1e1e1e;
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background-color: #252525;
            border-bottom: 1px solid #333;
            padding: 1.2rem 1.5rem;
        }
        
        .card-header h5 {
            color: #ff7e2e;
            font-weight: 600;
            margin-bottom: 0;
            display: flex;
            align-items: center;
        }
        
        .card-header h5 i {
            margin-right: 10px;
            font-size: 1.1rem;
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .form-control, .form-select {
            background-color: #2a2a2a;
            border: 2px solid #3a3a3a;
            border-radius: 10px;
            color: #e2e8f0;
            padding: 0.8rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            background-color: #2d2d2d;
            border-color: #f36100;
            box-shadow: 0 0 0 0.25rem rgba(243, 97, 0, 0.25);
            color: #fff;
        }
        
        .form-label {
            color: #f36100;
            font-weight: 600;
            margin-bottom: 0.8rem;
            font-size: 1rem;
            display: flex;
            align-items: center;
        }
        
        .form-label i {
            margin-right: 8px;
            font-size: 0.9rem;
        }
        
        .form-text {
            color: #aaa;
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #f36100 0%, #ff7e2e 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(243, 97, 0, 0.3);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }
        
        .btn-primary i {
            margin-right: 8px;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #e55a00 0%, #f36100 100%);
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(243, 97, 0, 0.4);
        }
        
        .btn-secondary {
            background: #2d2d2d;
            border: none;
            color: #e2e8f0;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }
        
        .btn-secondary i {
            margin-right: 8px;
        }
        
        .btn-secondary:hover {
            background: #3a3a3a;
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.3);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }
        
        .btn-danger i {
            margin-right: 8px;
        }
        
        .btn-danger:hover {
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(220, 53, 69, 0.4);
        }
        
        .custom-textarea {
            background-color: #2a2a2a;
            border: 2px solid #3a3a3a;
            border-radius: 10px;
            color: #e2e8f0;
            padding: 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            resize: vertical;
            min-height: auto;
            line-height: 1.6;
        }
        
        .custom-textarea:focus {
            background-color: #2d2d2d;
            border-color: #f36100;
            box-shadow: 0 0 0 0.25rem rgba(243, 97, 0, 0.25);
            color: #fff;
            outline: none;
        }
        
        .custom-textarea::placeholder {
            color: #6c757d;
            opacity: 0.7;
        }
        
        .img-preview {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 1rem;
            border: 2px solid #333;
        }
        
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }
    </style>

    <div class="container py-5">
        <h1 class="mb-4">
            <i class="fa fa-edit me-2"></i>Modifier le Plat
        </h1>
        
        {{ form_start(form) }}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fa fa-info-circle"></i> Informations générales</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.name, 'Nom du plat', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-utensils"></i></span>
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du plat'}}) }}
                                </div>
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.nbCalories, 'Calories', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-fire"></i></span>
                                    {{ form_widget(form.nbCalories, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de calories'}}) }}
                                </div>
                                {{ form_errors(form.nbCalories) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.idNutritionist, 'Nutritionniste', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-user-md"></i></span>
                            {{ form_widget(form.idNutritionist, {'attr': {'class': 'form-control', 'placeholder': 'ID du nutritionniste'}}) }}
                        </div>
                        {{ form_errors(form.idNutritionist) }}
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fa fa-image"></i> Image</h5>
                </div>
                <div class="card-body">
                    {% if plat.image %}
                        <img src="{{ asset(plat.image) }}" class="img-preview" alt="{{ plat.name }}">
                    {% endif %}
                    
                    <div class="form-group mb-0">
                        {{ form_label(form.image, 'Image du plat', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-upload"></i></span>
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.image) }}
                        <small class="form-text">Format recommandé: JPG ou PNG, max 2MB.</small>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fa fa-list-ul"></i> Contenu</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        {{ form_label(form.ingredients, 'Ingrédients', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-carrot"></i></span>
                            {{ form_widget(form.ingredients, {
                                'attr': {
                                    'class': 'form-control custom-textarea',
                                    'rows': 5,
                                    'placeholder': 'Listez les ingrédients principaux du plat...'
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.ingredients) }}
                        <small class="form-text">Séparez les ingrédients par des virgules ou des sauts de ligne.</small>
                    </div>
                    
                    <div class="form-group mb-0">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-align-left"></i></span>
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control custom-textarea',
                                    'rows': 7,
                                    'placeholder': 'Décrivez la préparation et les caractéristiques du plat...'
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.description) }}
                        <small class="form-text">Décrivez la préparation, le goût et les caractéristiques nutritionnelles du plat.</small>
                    </div>
                </div>
            </div>
            
            <div class="action-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Enregistrer les modifications
                </button>
                <a href="{{ path('app_plats_index') }}" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_plats_show', {'id': plat.id}) }}" class="btn btn-secondary">
                    <i class="fa fa-eye"></i> Voir le plat
                </a>
            </div>
        {{ form_end(form) }}
        
        <div class="mt-4">
            <form method="post" action="{{ path('app_plats_delete', {'id': plat.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce plat?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plat.id) }}">
                <button class="btn btn-danger">
                    <i class="fa fa-trash"></i> Supprimer le plat
                </button>
            </form>
        </div>
    </div>
{% endblock %}



