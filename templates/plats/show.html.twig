{% extends 'base.html.twig' %}

{% block title %}Détails du Plat{% endblock %}
{% block Hero_Section_Begin %}

    <section class="breadcrumb-section" style="
            background-image: url('{{ asset('img/Coachini Meals.png') }}');
            background-size: cover;
            background-position: top center;
            background-repeat: no-repeat;
            height: 400px;
            /*margin-top: 100px;*/
            padding: 0;
            ">

    </section>


{% endblock %}
{% block body %}
    <style>
        body {
            background: #151515;
            color: #e2e8f0;
            font-family: 'Poppins', sans-serif;
        }
        
        .container {
            max-width: 1200px;
        }
        
        h1 {
            color: #ff7e2e;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            position: relative;
            display: inline-block;
        }
        
        h1:after {
            content: '';
            position: absolute;
            width: 60%;
            height: 4px;
            background: linear-gradient(90deg, #f36100, #ff7e2e);
            bottom: -10px;
            left: 0;
            border-radius: 2px;
        }
        
        .card {
            background: #1e1e1e;
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
            overflow: hidden;
            margin-bottom: 2rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.5);
        }
        
        .card-body {
            padding: 1.8rem;
            color: #e2e8f0;
        }
        
        .card-title {
            color: #f36100;
            font-weight: 600;
            font-size: 1.4rem;
            margin-bottom: 1.2rem;
            border-bottom: 2px solid #333;
            padding-bottom: 0.8rem;
        }
        
        .btn {
            padding: 0.8rem 1.5rem;
            font-weight: 600;
            border-radius: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            margin-right: 0.5rem;
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #f36100 0%, #ff7e2e 100%);
            border: none;
            color: white;
            box-shadow: 0 4px 15px rgba(243, 97, 0, 0.3);
        }
        
        .btn-warning:hover {
            background: linear-gradient(135deg, #e55a00 0%, #f36100 100%);
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(243, 97, 0, 0.4);
            color: white;
        }
        
        .btn-secondary {
            background: #2d2d2d;
            border: none;
            color: #e2e8f0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        
        .btn-secondary:hover {
            background: #3a3a3a;
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.3);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border: none;
            color: white;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        }
        
        .btn-danger:hover {
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(220, 53, 69, 0.4);
        }
        
        .bg-light {
            background-color: #2a2a2a !important;
        }
        
        .text-muted {
            color: #aaa !important;
        }
        
        strong {
            color: #ff7e2e;
            font-weight: 600;
        }
        
        .img-fluid {
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
            transition: transform 0.3s ease;
        }
        
        .img-fluid:hover {
            transform: scale(1.02);
        }
        
        .info-section {
            margin-bottom: 1.5rem;
        }
        
        .info-section h5 {
            color: #ff7e2e;
            font-weight: 600;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #333;
        }
        
        .info-section p {
            line-height: 1.6;
        }
        
        .action-buttons {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            gap: 0.5rem;
            margin-top: 2rem;
            justify-content: space-between;
        }
        
        .action-buttons a, 
        .action-buttons form {
            flex: 1;
        }
        
        .action-buttons .btn {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            white-space: nowrap;
        }
        
        @media (max-width: 576px) {
            .action-buttons {
                flex-direction: column;
            }
        }
        
        .no-image-placeholder {
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(145deg, #1e1e1e, #252525);
            border-radius: 15px;
            box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.2);
        }
    </style>

    <div class="container py-5">
        <h1 class="mb-5">{{ plat.name }}</h1>
        
        <div class="row">
            <div class="col-md-6 mb-4">
                {% if plat.image %}
                    <img src="{{ asset(plat.image) }}" class="img-fluid" alt="{{ plat.name }}" style="width: 100%; height: 350px; object-fit: cover;">
                {% else %}
                    <div class="no-image-placeholder">
                        <span class="text-muted">Pas d'image disponible</span>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Informations</h5>
                        
                        <div class="info-section">
                            <p><strong>Calories:</strong> {{ plat.nbCalories }}</p>
                            <p><strong>Nutritionniste ID:</strong> {{ plat.idNutritionist }}</p>
                        </div>
                        
                        <div class="info-section">
                            <h5>Ingrédients</h5>
                            <p>{{ plat.ingredients|nl2br }}</p>
                        </div>
                        
                        <div class="info-section">
                            <h5>Description</h5>
                            <p>{{ plat.description|nl2br }}</p>
                        </div>
                        
                        <div class="action-buttons">
                            <a href="{{ path('app_plats_edit', {'id': plat.id}) }}" class="btn btn-warning">
                                Modifier
                            </a>
                            <a href="{{ path('app_plats_index') }}" class="btn btn-secondary">
                                Retour à la liste
                            </a>
                            <form method="post" action="{{ path('app_plats_delete', {'id': plat.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce plat?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plat.id) }}">
                                <button class="btn btn-danger">
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}





