<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Inscription</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Ton CSS reste inchangé, je le garde tel quel -->
    <style>
        /* Ton CSS ici */
    </style>
</head>
<body>
<div class="container">
    <form class="registration-form" action="{{ path('app_register') }}" method="POST" enctype="multipart/form-data">
        <img src="{{ asset('assets/images/logo-coachini.png') }}" alt="Coachini" class="logo">
        <div class="header-text">
            <h1>Créer un compte</h1>
            <p>Rejoignez la communauté Coachini</p>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <label class="form-label">Nom</label>
                <input type="text" class="form-control" name="nom" placeholder="Nom">
            </div>
            <div class="col-md-6">
                <label class="form-label">Prénom</label>
                <input type="text" class="form-control" name="prenom" placeholder="Prénom">
            </div>
            <div class="col-12">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="col-12">
                <label class="form-label">Mot de passe</label>
                <input type="password" class="form-control" name="password" placeholder="Mot de passe">
            </div>
            <div class="col-12">
                <label class="form-label">Photo de profil</label>
                <div class="file-upload">
                    <input type="file" class="d-none" id="photo" name="photo">
                    <label for="photo">
                        <div>Choose File</div>
                        <div class="text-muted">No file chosen</div>
                    </label>
                </div>
            </div>
        </div>

        <div class="role-grid">
            <div class="role-button" data-role="adherent">
                <i class="fas fa-user"></i>
                <div>Adhérent</div>
            </div>
            <div class="role-button active" data-role="coach">
                <i class="fas fa-dumbbell"></i>
                <div>Coach</div>
            </div>
            <div class="role-button" data-role="createur">
                <i class="fas fa-calendar"></i>
                <div>Créateur<br>d'événement</div>
            </div>
            <div class="role-button investisseur-button" data-role="investisseur">
                <i class="fas fa-store"></i>
                <div>Investisseur Produit</div>
            </div>
        </div>

        <!-- Champ caché pour stocker le rôle sélectionné -->
        <input type="hidden" name="role" id="selected-role" value="coach">

        <!-- Sous-formulaires -->
        <div id="adherent-form" class="form-section" style="display: none;">
            <h3>Informations Adhérent</h3>
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label">Poids (kg)</label>
                    <input type="number" class="form-control" name="adherent[poids]" placeholder="Votre poids">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Taille (cm)</label>
                    <input type="number" class="form-control" name="adherent[taille]" placeholder="Votre taille">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Âge</label>
                    <input type="number" class="form-control" name="adherent[age]" placeholder="Votre âge">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Genre</label>
                    <select class="form-control" name="adherent[genre]">
                        <option value="">Sélectionnez votre genre</option>
                        <option value="homme">Homme</option>
                        <option value="femme">Femme</option>
                        <option value="autre">Autre</option>
                    </select>
                </div>
                <div class="col-12">
                    <label class="form-label">Objectif personnel</label>
                    <select class="form-control" name="adherent[objectif]">
                        <option value="">Sélectionnez votre objectif</option>
                        <option value="perte_poids">Perte de poids</option>
                        <option value="musculation">Musculation</option>
                        <option value="endurance">Endurance</option>
                        <option value="bien_etre">Bien-être</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Autres sous-formulaires similaires avec des attributs name -->
        <div id="coach-form" class="form-section" style="display: block;">
            <h3>Informations Coach</h3>
            <div class="row g-4">
                <div class="col-12">
                    <label class="form-label">Années d'expérience</label>
                    <input type="number" class="form-control" name="coach[experience]" placeholder="Années d'expérience">
                </div>
                <div class="col-12">
                    <label class="form-label">Spécialité</label>
                    <input type="text" class="form-control" name="coach[specialite]" placeholder="Musculation">
                </div>
                <div class="col-12">
                    <label class="form-label">CV (PDF)</label>
                    <div class="file-upload">
                        <input type="file" class="d-none" id="cv" name="coach[cv]" accept=".pdf">
                        <label for="cv">
                            <div>Choose File</div>
                            <div class="text-muted">No file chosen</div>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ajoute les name pour createur et investisseur de la même manière -->

        <div class="text-center mt-5">
            <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
            <div class="mt-4">
                <a href="{{ path('app_login') }}" class="text-white text-decoration-none">
                    <i class="fas fa-arrow-left me-2"></i>
                    Déjà inscrit ? Se connecter
                </a>
            </div>
        </div>
    </form>
</div>

<script>
    document.querySelectorAll('.role-button').forEach(button => {
        button.addEventListener('click', function() {
            document.querySelectorAll('.role-button').forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            document.querySelectorAll('.form-section').forEach(form => form.style.display = 'none');

            const role = this.getAttribute('data-role');
            document.getElementById('selected-role').value = role;
            document.getElementById(`${role}-form`).style.display = 'block';
        });
    });

    document.querySelectorAll('.file-upload input[type="file"]').forEach(input => {
        input.addEventListener('change', function() {
            const label = this.nextElementSibling;
            label.querySelector('.text-muted').textContent = this.files.length > 0 ? this.files[0].name : 'No file chosen';
        });
    });
</script>
</body>
</html>
