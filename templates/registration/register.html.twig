<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Inscription</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #1a1a1a;
            min-height: 100vh;
            color: white;
        }
        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
        }
        .logo {
            width: 150px;
            margin: 0 auto 30px;
            display: block;
        }
        .header-text {
            text-align: center;
            margin-bottom: 40px;
        }
        .header-text h1 {
            color: white;
            font-size: 32px;
            margin-bottom: 10px;
            font-weight: 600;
        }
        .header-text p {
            color: #888;
            font-size: 16px;
            margin: 0;
        }
        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: white;
            padding: 15px;
            height: auto;
            font-size: 16px;
        }
        .form-control:focus {
            background: rgba(255, 255, 255, 0.08);
            border-color: #ff6b01;
            color: white;
            box-shadow: none;
        }
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }
        .form-label {
            color: white;
            font-weight: 500;
            margin-bottom: 10px;
            font-size: 16px;
        }
        .role-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }
        .role-button {
            background: #1a1a1a;
            border: 2px solid transparent;
            border-radius: 12px;
            padding: 30px 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            aspect-ratio: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .role-button.active {
            background: #2d1d09;
            border-color: #ff6b01;
        }
        .role-button i {
            font-size: 40px;
            color: #ff6b01;
            margin-bottom: 15px;
        }
        .role-button div {
            color: white;
            font-size: 18px;
            font-weight: 500;
        }
        .investisseur-button {
            grid-column: 1 / -1;
            aspect-ratio: auto;
            padding: 20px;
        }
        .form-section {
            background: #1a1a1a;
            border-radius: 12px;
            padding: 30px;
            margin-top: 20px;
        }
        .form-section h3 {
            color: #ff6b01;
            margin-bottom: 20px;
            font-size: 24px;
        }
        .file-upload {
            background: #1a1a1a;
            border: 2px dashed rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
        }
        .file-upload:hover {
            border-color: #ff6b01;
        }
        .btn-primary {
            background: #ff6b01;
            border: none;
            padding: 15px 40px;
            font-size: 18px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: #ff8c3b;
            transform: translateY(-2px);
        }
        a {
            color: #ff6b01;
            transition: all 0.3s ease;
        }
        a:hover {
            color: #ff8c3b;
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="registration-form">
            <img src="{{ asset('assets/images/logo-coachini.png') }}" alt="Coachini" class="logo">
            <div class="header-text">
                <h1>Créer un compte</h1>
                <p>Rejoignez la communauté Coachini</p>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <label class="form-label">Nom</label>
                    <input type="text" class="form-control" placeholder="Nom">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Prénom</label>
                    <input type="text" class="form-control" placeholder="Prénom">
                </div>
                <div class="col-12">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Email">
                </div>
                <div class="col-12">
                    <label class="form-label">Mot de passe</label>
                    <input type="password" class="form-control" placeholder="Mot de passe">
                </div>
                <div class="col-12">
                    <label class="form-label">Photo de profil</label>
                    <div class="file-upload">
                        <input type="file" class="d-none" id="photo">
                        <label for="photo">
                            <div>Choose File</div>
                            <div class="text-muted">No file chosen</div>
                        </label>
                    </div>
                </div>
            </div>

            <div class="role-grid">
                <div class="role-button">
                    <i class="fas fa-user"></i>
                    <div>Adhérent</div>
                </div>
                <div class="role-button active">
                    <i class="fas fa-dumbbell"></i>
                    <div>Coach</div>
                </div>
                <div class="role-button">
                    <i class="fas fa-calendar"></i>
                    <div>Créateur<br>d'événement</div>
                </div>
                <div class="role-button investisseur-button">
                    <i class="fas fa-store"></i>
                    <div>Investisseur Produit</div>
                </div>
            </div>

            {# Sous-formulaires pour chaque rôle #}
            <div id="adherent-form" class="form-section" style="display: none;">
                <h3>Informations Adhérent</h3>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label">Poids (kg)</label>
                        <input type="number" class="form-control" placeholder="Votre poids">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Taille (cm)</label>
                        <input type="number" class="form-control" placeholder="Votre taille">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Âge</label>
                        <input type="number" class="form-control" placeholder="Votre âge">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Genre</label>
                        <select class="form-control">
                            <option value="">Sélectionnez votre genre</option>
                            <option value="homme">Homme</option>
                            <option value="femme">Femme</option>
                            <option value="autre">Autre</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Objectif personnel</label>
                        <select class="form-control">
                            <option value="">Sélectionnez votre objectif</option>
                            <option value="perte_poids">Perte de poids</option>
                            <option value="musculation">Musculation</option>
                            <option value="endurance">Endurance</option>
                            <option value="bien_etre">Bien-être</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="coach-form" class="form-section" style="display: none;">
                <h3>Informations Coach</h3>
                <div class="row g-4">
                    <div class="col-12">
                        <label class="form-label">Années d'expérience</label>
                        <input type="number" class="form-control" placeholder="Années d'expérience">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Spécialité</label>
                        <input type="text" class="form-control" placeholder="Musculation">
                    </div>
                    <div class="col-12">
                        <label class="form-label">CV (PDF)</label>
                        <div class="file-upload">
                            <input type="file" class="d-none" id="cv" accept=".pdf">
                            <label for="cv">
                                <div>Choose File</div>
                                <div class="text-muted">No file chosen</div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div id="createur-form" class="form-section" style="display: none;">
                <h3>Informations Créateur d'événement</h3>
                <div class="row g-4">
                    <div class="col-12">
                        <label class="form-label">Nom de l'organisation</label>
                        <input type="text" class="form-control" placeholder="Nom de votre organisation">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" placeholder="Décrivez votre organisation"></textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Adresse</label>
                        <input type="text" class="form-control" placeholder="Adresse de l'organisation">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Téléphone</label>
                        <input type="tel" class="form-control" placeholder="Numéro de téléphone">
                    </div>
                </div>
            </div>

            <div id="investisseur-form" class="form-section" style="display: none;">
                <h3>Informations Investisseur</h3>
                <div class="row g-4">
                    <div class="col-12">
                        <label class="form-label">Nom de l'entreprise</label>
                        <input type="text" class="form-control" placeholder="Nom de votre entreprise">
                    </div>
                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" placeholder="Décrivez votre entreprise"></textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Adresse</label>
                        <input type="text" class="form-control" placeholder="Adresse de l'entreprise">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Téléphone</label>
                        <input type="tel" class="form-control" placeholder="Numéro de téléphone">
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
                <div class="mt-4">
                    <a href="{{ path('app_login') }}" class="text-white text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>
                        Déjà inscrit ? Se connecter
                    </a>
                </div>
            </div>
        </form>
    </div>

    <script>
        document.querySelectorAll('.role-button').forEach(button => {
            button.addEventListener('click', function() {
                // Retire la classe active de tous les boutons
                document.querySelectorAll('.role-button').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');

                // Cache tous les formulaires
                document.querySelectorAll('.form-section').forEach(form => {
                    form.style.display = 'none';
                });

                // Récupère le texte du rôle et nettoie les retours à la ligne
                const roleText = this.querySelector('div').textContent
                    .toLowerCase()
                    .replace(/\n/g, ' ')
                    .trim();

                // Map pour chaque type de rôle possible
                let formId;
                if (roleText.includes('adhérent')) {
                    formId = 'adherent-form';
                } else if (roleText.includes('coach')) {
                    formId = 'coach-form';
                } else if (roleText.includes('créateur')) {
                    formId = 'createur-form';
                } else if (roleText.includes('investisseur')) {
                    formId = 'investisseur-form';
                }

                // Affiche le formulaire correspondant
                if (formId) {
                    document.getElementById(formId).style.display = 'block';
                }
            });
        });

        document.querySelectorAll('.file-upload input[type="file"]').forEach(input => {
            input.addEventListener('change', function() {
                const label = this.nextElementSibling;
                if (this.files.length > 0) {
                    label.querySelector('.text-muted').textContent = this.files[0].name;
                } else {
                    label.querySelector('.text-muted').textContent = 'No file chosen';
                }
            });
        });
    </script>
</body>
</html> 