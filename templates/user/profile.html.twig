                            <label class="form-label">Adresse</label>
                            <input type="text" class="form-control" name="adresseCreateur" value="{{ app.user.adresseCreateur }}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Téléphone</label>
                            <input type="tel" class="form-control" name="telephoneCreateur" value="{{ app.user.telephoneCreateur }}" pattern="[0-9]{8}">
                            <small class="text-muted">8 chiffres requis</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Statut du certificat</label>
                            <div class="certificate-status">
                                {% if app.user.certificatValide %}
                                    <span class="badge bg-success p-2">
                                        <i class="fa fa-check-circle me-2"></i>Validé
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning text-dark p-2">
                                        <i class="fa fa-clock me-2"></i>En attente
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    {% elseif app.user.discriminator == 'investisseur_produit' %}
                        <div class="mb-3">
                            <label class="form-label">Nom de l'entreprise</label>
                            <input type="text" class="form-control" name="nomEntreprise" value="{{ app.user.nomEntreprise }}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="descriptionInvestisseur" rows="3">{{ app.user.descriptionInvestisseur }}</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Adresse</label>
                            <input type="text" class="form-control" name="adresseInvestisseur" value="{{ app.user.adresseInvestisseur }}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Téléphone</label>
                            <input type="tel" class="form-control" name="telephoneInvestisseur" value="{{ app.user.telephoneInvestisseur }}" pattern="[0-9]{8}">
                            <small class="text-muted">8 chiffres requis</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Statut du certificat</label>
                            <div class="certificate-status">
                                {% if app.user.certificatValide %}
                                    <span class="badge bg-success p-2">
                                        <i class="fa fa-check-circle me-2"></i>Validé
                                    </span>
