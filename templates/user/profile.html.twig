<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion de l'upload d'image
    const imageInput = document.getElementById('profileImage');
    const imagePreview = document.getElementById('imagePreview');
    const saveImageButton = document.getElementById('saveImage');
    const uploadImageForm = document.getElementById('uploadImageForm');
    const uploadImageModal = document.getElementById('uploadImageModal');
    const modal = new bootstrap.Modal(uploadImageModal);

    // Gestion du bouton de modification de la photo de profil
    const uploadButton = document.querySelector('.btn-orange.position-absolute');
    if (uploadButton) {
        uploadButton.addEventListener('click', function(e) {
            e.preventDefault();
            modal.show();
        });
    }

    if (imageInput) {
        imageInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    }

    if (saveImageButton) {
        saveImageButton.addEventListener('click', function() {
            const formData = new FormData(uploadImageForm);
            
            if (!formData.get('profileImage')) {
                Swal.fire({
                    title: 'Erreur',
                    text: 'Veuillez sélectionner une image',
                    icon: 'error',
                    confirmButtonColor: '#FF6B00'
                });
                return;
            }

            // Afficher un indicateur de chargement
            Swal.fire({
                title: 'Upload en cours...',
                text: 'Veuillez patienter pendant le téléchargement de l\'image',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch('{{ path("app_profile_update_image") }}', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Erreur lors de l\'upload');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Mettre à jour l'image de profil
                    const profileImages = document.querySelectorAll('.rounded-circle');
                    const newImagePath = '{{ asset('uploads/user_images/') }}/' + data.filename;
                    
                    profileImages.forEach(img => {
                        img.src = newImagePath + '?v=' + new Date().getTime();
                    });

                    // Fermer la modal
                    modal.hide();

                    // Réinitialiser le formulaire et la prévisualisation
                    uploadImageForm.reset();
                    imagePreview.style.display = 'none';
                    imagePreview.src = '';

                    // Fermer l'indicateur de chargement sans afficher de message
                    Swal.close();
                } else {
                    throw new Error(data.message || 'Erreur lors de l\'upload');
                }
            })
            .catch(error => {
                Swal.fire({
                    title: 'Erreur',
                    text: error.message,
                    icon: 'error',
                    confirmButtonColor: '#FF6B00'
                });
            });
        });
    }

    // Réinitialiser la prévisualisation lors de la fermeture de la modal
    if (uploadImageModal) {
        uploadImageModal.addEventListener('hidden.bs.modal', function () {
            uploadImageForm.reset();
            imagePreview.style.display = 'none';
        });
    }

    // Gestion de la modification par section
    const editButtons = document.querySelectorAll('.edit-section');
    
    editButtons.forEach(button => {
        button.addEventListener('click', function() {
            const section = this.dataset.section;
            let inputs;
            
            if (section === 'personal') {
                inputs = document.querySelectorAll('#personalInfoForm input, #personalInfoForm select');
            } else if (section === 'specific') {
                inputs = document.querySelectorAll('#specificInfoForm input, #specificInfoForm select, #specificInfoForm textarea');
            }
            
            if (this.innerHTML.includes('Modifier')) {
                this.innerHTML = '<i class="fa fa-save me-2"></i>Enregistrer';
                this.classList.remove('btn-outline-orange');
                this.classList.add('btn-orange');
                
                inputs.forEach(input => {
                    if (!input.hasAttribute('disabled')) {
                        input.readOnly = false;
                    }
                });
            } else {
                Swal.fire({
                    title: 'Confirmer la modification',
                    text: 'Êtes-vous sûr de vouloir enregistrer ces modifications ?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#FF6B00',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Oui, enregistrer',
                    cancelButtonText: 'Annuler'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.innerHTML = '<i class="fa fa-edit me-2"></i>Modifier';
                        this.classList.remove('btn-orange');
                        this.classList.add('btn-outline-orange');
                        
                        inputs.forEach(input => {
                            if (!input.hasAttribute('disabled')) {
                                input.readOnly = true;
                            }
                        });
                        
                        const form = section === 'personal' ? 
                            document.getElementById('personalInfoForm') : 
                            document.getElementById('specificInfoForm');
                        
                        const formData = new FormData(form);
                        
                        // S'assurer que les valeurs des select sont incluses
                        form.querySelectorAll('select').forEach(select => {
                            formData.append(select.name, select.value);
                        });
                        
                        formData.append('section', section);
                        
                        fetch('{{ path("app_profile_update_info") }}', {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Mise à jour des informations dans le côté gauche
                                const nomElement = document.querySelector('.card-body h4');
                                if (nomElement && section === 'personal') {
                                    nomElement.textContent = `${formData.get('prenom')} ${formData.get('nom')}`;
                                }

                                // Mise à jour des valeurs affichées
                                inputs.forEach(input => {
                                    if (input.tagName === 'SELECT') {
                                        const selectedOption = input.options[input.selectedIndex];
                                        const displayElement = input.closest('.specialite-display');
                                        if (displayElement) {
                                            displayElement.querySelector('.form-control').value = input.value;
                                        }
                                    }
                                });

                                Swal.fire({
                                    title: 'Succès !',
                                    text: 'Les informations ont été mises à jour avec succès.',
                                    icon: 'success',
                                    confirmButtonColor: '#FF6B00',
                                    timer: 3000,
                                    timerProgressBar: true
                                });
                            } else {
                                Swal.fire({
                                    title: 'Erreur !',
                                    text: data.message || 'Une erreur est survenue lors de la mise à jour.',
                                    icon: 'error',
                                    confirmButtonColor: '#FF6B00'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Erreur:', error);
                            Swal.fire({
                                title: 'Erreur !',
                                text: 'Une erreur est survenue lors de la mise à jour.',
                                icon: 'error',
                                confirmButtonColor: '#FF6B00'
                            });
                        });
                    }
                });
            }
        });
    });
});
</script>
