                                <option value="musculation" {% if app.user.specialite == 'musculation' %}selected{% endif %}>Musculation</option>
                                <option value="yoga" {% if app.user.specialite == 'yoga' %}selected{% endif %}>Yoga</option>
                                <option value="gymnastique" {% if app.user.specialite == 'gymnastique' %}selected{% endif %}>Gymnastique</option>
