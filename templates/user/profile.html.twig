                        <label class="form-label">Nom</label>
                        <input type="text" class="form-control" value="{{ app.user.nom }}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="{{ app.user.email }}">
