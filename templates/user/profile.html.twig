                            <input type="number" class="form-control" name="anneeExperience" value="{{ app.user.anneeExperience }}">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Statut du certificat</label>
                            <div class="certificate-status">
                                {% if app.user.certificat_valide %}
                                    <span class="badge bg-success p-2">
