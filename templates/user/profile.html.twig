                        </div>
                    {% elseif app.user.discriminator == 'createur_evenement' %}
                        <div class="mb-3">
                            <label class="form-label">Nom de l'organisation</label>
                            <input type="text" class="form-control" name="nomOrganisation" value="{{ app.user.nomOrganisation }}">
