{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Coachini{% endblock %}
{% block Hero_Section_Begin %}


    <section class="breadcrumb-section"  style="
            background-image: url('{{ asset('uploads/user_images/back.png') }}');
            background-size: cover;
            background-position: top center;
            background-repeat: no-repeat;
            height: 980px;
            margin-top: -450px;
            padding: 0;
            ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Events</h2>
                        <div class="bt-option">
                            <a href="./index.html">Home</a>
                            <span>Map</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
{% block body %}
<div class="container py-5">
    <div class="row">
        <!-- Côté gauche - Photo de profil et informations principales -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-lg mb-4" style="min-height: 500px;">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <div>
                        <div class="position-relative d-inline-block mb-4">
                            {% if app.user.image %}
                                <img src="{{ asset('uploads/user_images/' ~ app.user.image) }}" alt="Photo de profil" 
                                     class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                            {% else %}
                                <img src="{{ asset('uploads/user_images/pdp.png') }}" alt="Photo de profil" 
                                     class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                            {% endif %}
                            <button class="btn btn-sm btn-orange position-absolute bottom-0 end-0 rounded-circle" 
                                    data-bs-toggle="modal" data-bs-target="#uploadImageModal">
                                <i class="fa fa-camera"></i>
                            </button>
                        </div>
                        <h4 class="mb-2">{{ app.user.prenom }} {{ app.user.nom }}</h4>
                        <p class="text-muted mb-3">{{ app.user.email }}</p>
                        
                        <!-- Position avec style amélioré -->
                        <div class="position-badge mb-4">
                            <span class="badge bg-orange text-white p-2 px-3 rounded-pill">
                                <i class="fa fa-user-tie me-2"></i>
                                {{ app.user.discriminator|capitalize }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Côté droit - Détails et activités -->
        <div class="col-md-8">
            <!-- Informations personnelles -->
            <div class="card shadow-sm border-0 rounded-lg mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">Informations personnelles</h5>
                        <button type="button" class="btn btn-sm btn-outline-orange edit-section" data-section="personal">
                            <i class="fa fa-edit me-2"></i>Modifier
                        </button>
                    </div>
                    <form id="personalInfoForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="text-muted">Prénom</label>
                                <input type="text" class="form-control" name="prenom" value="{{ app.user.prenom }}" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted">Nom</label>
                                <input type="text" class="form-control" name="nom" value="{{ app.user.nom }}" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="text-muted">Email</label>
                                <input type="email" class="form-control" name="email" value="{{ app.user.email }}" readonly>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Informations spécifiques -->
            <div class="card shadow-sm border-0 rounded-lg mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">Informations spécifiques</h5>
                        <button type="button" class="btn btn-sm btn-outline-orange edit-section" data-section="specific">
                            <i class="fa fa-edit me-2"></i>Modifier
                        </button>
                    </div>
                    <form id="specificInfoForm">
                        {% if app.user.discriminator == 'adherent' %}
                            <div class="row">
                                <!-- Informations de base -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Âge</label>
                                    <input type="number" class="form-control" name="age" value="{{ app.user.age }}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Genre</label>
                                    <div class="specialite-display">
                                        <select class="form-control" name="genre" readonly>
                                            <option value="homme" {% if app.user.genre == 'homme' %}selected{% endif %}>
                                                <i class="fa fa-male me-2"></i>Homme
                                            </option>
                                            <option value="femme" {% if app.user.genre == 'femme' %}selected{% endif %}>
                                                <i class="fa fa-female me-2"></i>Femme
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Mesures physiques -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Taille (cm)</label>
                                    <input type="number" class="form-control" name="taille" value="{{ app.user.taille }}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Poids (kg)</label>
                                    <input type="number" class="form-control" name="poids" value="{{ app.user.poids }}" readonly>
                                </div>
                                <!-- Objectifs et niveau -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Objectif personnel</label>
                                    <div class="specialite-display">
                                        <select class="form-control" name="objectifPersonnel" readonly>
                                            <option value="Perdre_Poids" {% if app.user.objectifPersonnel == 'Perdre_Poids' %}selected{% endif %}>
                                                <i class="fa fa-weight me-2"></i>Perdre du poids
                                            </option>
                                            <option value="Avoir_des_muscles" {% if app.user.objectifPersonnel == 'Avoir_des_muscles' %}selected{% endif %}>
                                                <i class="fa fa-dumbbell me-2"></i>Avoir des muscles
                                            </option>
                                            <option value="Relaxation" {% if app.user.objectifPersonnel == 'Relaxation' %}selected{% endif %}>
                                                <i class="fa fa-spa me-2"></i>Relaxation
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Niveau d'activité</label>
                                    <div class="specialite-display">
                                        <select class="form-control" name="niveauActivite" readonly>
                                            <option value="Debutant" {% if app.user.niveauActivite == 'Debutant' %}selected{% endif %}>
                                                <i class="fa fa-seedling me-2"></i>Débutant
                                            </option>
                                            <option value="Intermediaire" {% if app.user.niveauActivite == 'Intermediaire' %}selected{% endif %}>
                                                <i class="fa fa-running me-2"></i>Intermédiaire
                                            </option>
                                            <option value="Avance" {% if app.user.niveauActivite == 'Avance' %}selected{% endif %}>
                                                <i class="fa fa-medal me-2"></i>Avancé
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        {% elseif app.user.discriminator == 'coach' %}
                            <div class="row">
                                <!-- Informations professionnelles -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Spécialité</label>
                                    <div class="specialite-display">
                                        <select class="form-control" name="specialite" readonly>
                                            <option value="musculation" {% if app.user.specialite == 'musculation' %}selected{% endif %}>
                                                <i class="fa fa-dumbbell me-2"></i>Musculation
                                            </option>
                                            <option value="yoga" {% if app.user.specialite == 'yoga' %}selected{% endif %}>
                                                <i class="fa fa-spa me-2"></i>Yoga
                                            </option>
                                            <option value="gymnastique" {% if app.user.specialite == 'gymnastique' %}selected{% endif %}>
                                                <i class="fa fa-running me-2"></i>Gymnastique
                                            </option>
                                            <option value="pilates" {% if app.user.specialite == 'pilates' %}selected{% endif %}>
                                                <i class="fa fa-heartbeat me-2"></i>Pilates
                                            </option>
                                            <option value="danse" {% if app.user.specialite == 'danse' %}selected{% endif %}>
                                                <i class="fa fa-music me-2"></i>Danse
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Années d'expérience</label>
                                    <input type="number" class="form-control" name="anneeExperience" value="{{ app.user.anneeExperience }}" readonly>
                                </div>
                                <!-- Évaluation et documents -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Note</label>
                                    <div class="note-display">
                                        <span class="badge bg-orange p-2">
                                            <i class="fa fa-star me-2"></i>{{ app.user.note }}/5
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <label class="text-muted me-4 mb-0">Statut du certificat :</label>
                                        <div class="certificate-status">
                                            {% if app.user.certificat_valide %}
                                                <span class="badge bg-success p-2">
                                                    <i class="fa fa-check-circle me-2"></i>Validé
                                                </span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark p-2">
                                                    <i class="fa fa-clock me-2"></i>En attente
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="text-muted">CV</label>
                                    <div class="d-flex align-items-center gap-3">
                                        {% if app.user.cv %}
                                            <a href="{{ asset('uploads/cv/' ~ app.user.cv) }}" target="_blank" class="btn btn-primary">
                                                <i class="fa fa-eye me-2"></i>Voir le CV
                                            </a>
                                        {% else %}
                                            <p class="text-muted mb-0">Aucun CV disponible</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% elseif app.user.discriminator == 'createur_evenement' %}
                            <div class="row">
                                <!-- Informations de l'organisation -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Nom de l'organisation</label>
                                    <input type="text" class="form-control" name="nomOrganisation" value="{{ app.user.nomOrganisation }}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <label class="text-muted me-4 mb-0">Statut du certificat :</label>
                                        <div class="certificate-status">
                                            {% if app.user.certificatValide %}
                                                <span class="badge bg-success p-2">
                                                    <i class="fa fa-check-circle me-2"></i>Validé
                                                </span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark p-2">
                                                    <i class="fa fa-clock me-2"></i>En attente
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <!-- Description -->
                                <div class="col-12 mb-3">
                                    <label class="text-muted">Description</label>
                                    <textarea class="form-control" name="descriptionCreateur" rows="3" readonly>{{ app.user.descriptionCreateur }}</textarea>
                                </div>
                                <!-- Coordonnées -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Adresse</label>
                                    <input type="text" class="form-control" name="adresseCreateur" value="{{ app.user.adresseCreateur }}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Téléphone</label>
                                    <input type="tel" class="form-control" name="telephoneCreateur" value="{{ app.user.telephoneCreateur }}" readonly pattern="[0-9]{8}">
                                    <small class="text-muted">8 chiffres requis</small>
                                </div>
                            </div>
                        {% elseif app.user.discriminator == 'investisseur_produit' %}
                            <div class="row">
                                <!-- Informations de l'entreprise -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Nom de l'entreprise</label>
                                    <input type="text" class="form-control" name="nomEntreprise" value="{{ app.user.nomEntreprise }}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center">
                                        <label class="text-muted me-4 mb-0">Statut du certificat :</label>
                                        <div class="certificate-status">
                                            {% if app.user.certificatValide %}
                                                <span class="badge bg-success p-2">
                                                    <i class="fa fa-check-circle me-2"></i>Validé
                                                </span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark p-2">
                                                    <i class="fa fa-clock me-2"></i>En attente
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <!-- Description -->
                                <div class="col-12 mb-3">
                                    <label class="text-muted">Description</label>
                                    <textarea class="form-control" name="descriptionInvestisseur" rows="3" readonly>{{ app.user.descriptionInvestisseur }}</textarea>
                                </div>
                                <!-- Coordonnées -->
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Adresse</label>
                                    <input type="text" class="form-control" name="adresseInvestisseur" value="{{ app.user.adresseInvestisseur }}" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Téléphone</label>
                                    <input type="tel" class="form-control" name="telephoneInvestisseur" value="{{ app.user.telephoneInvestisseur }}" readonly pattern="[0-9]{8}">
                                    <small class="text-muted">8 chiffres requis</small>
                                </div>
                            </div>
                        {% endif %}
                    </form>
                </div>
            </div>

            <!-- Objectifs et progrès (uniquement pour les adhérents) -->
            {% if app.user.discriminator == 'adherent' %}
                <div class="card shadow-sm border-0 rounded-lg mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Objectifs et progrès</h5>
                        <div class="progress mb-3" style="height: 10px;">
                            <div class="progress-bar bg-orange" role="progressbar" style="width: 75%;" 
                                 aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h6 class="text-orange mb-1">Poids</h6>
                                    <p class="mb-0">{{ app.user.poids }} kg</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h6 class="text-orange mb-1">IMC</h6>
                                    <p class="mb-0">{{ (app.user.poids / ((app.user.taille/100) * (app.user.taille/100)))|number_format(1) }}</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h6 class="text-orange mb-1">Objectif</h6>
                                    <p class="mb-0">{{ app.user.objectifPersonnel }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Sécurité -->
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body">
                    <h5 class="card-title mb-4">Sécurité</h5>
                    <button id="showPasswordForm" class="btn btn-outline-orange mb-3">
                        <i class="fa fa-lock me-2"></i>Changer le mot de passe
                    </button>
                    <div id="passwordForm" style="display: none;">
                        <form>
                            <div class="mb-3">
                                <label class="text-muted">Mot de passe actuel</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Nouveau mot de passe</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Confirmer le nouveau mot de passe</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-orange">Enregistrer</button>
                                <button type="button" id="cancelPasswordChange" class="btn btn-outline-secondary">Annuler</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

