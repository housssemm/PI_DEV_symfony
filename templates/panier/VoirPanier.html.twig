{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
    </style>
    <link rel="stylesheet" href="{{ asset('css/voirpanier.css') }}">
    <h1 style="text-align: center;margin-top: 90px">Details Panier</h1>
    <div class="panier-container">
        <!-- Liste des produits -->
        <div class="produits-list">
            <!-- Header -->
            <div class="produit-header">
                <div class="produit-image">Image</div>
                <div class="produit-info">Nom</div>
                <div class="quantite-control">Quantité</div>
                <div class="produit-prix">Sous-total</div>
            </div>
            <!-- Produits -->
            {% for produitPanier in produitsPanier %}
                <div class="produit-item">
                    <div class="produit-image">
                        <img src="{{ asset('img/' ~ produitPanier.produit.image) }}" alt="{{ produitPanier.produit.nom }}">
                    </div>
                    <div class="produit-info">
                        <p><strong>{{ produitPanier.produit.nom }}</strong></p>
                    </div>
                    <div class="quantite-control">
                        <button>-</button>
                        <input type="text" value="{{ produitPanier.quantite }}" readonly>
                        <button>+</button>
                    </div>
                    <div class="produit-prix">
                        {{ produitPanier.quantite * produitPanier.produit.prix }} DT
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Résumé -->
        <div class="resume">
            <h3>Résumé du Panier</h3>
            <p><span>Nombre d'articles :</span> <span>{{ produitsPanier|length }}</span></p>
            <div class="total">
                <span>Total :</span> <span>{{ montantTotal }} DT</span>
            </div>
            <a href="#" class="btn-commander">Proceder au Paiement</a>
            <a  href="{{ path('afficher_produit_au_panier') }}" class="btn-commander">Continuer Vos Achats</a>
        </div>
    </div>
{% endblock %}







