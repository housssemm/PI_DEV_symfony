{% extends 'base.html.twig' %}

{% block title %}Détails de l'Offre - {{ offre.nom }}{% endblock %}

{% block Hero_Section_Begin %}
    <style>
        body { background: #151515; }
        .erreur { color: red; }
    </style>
    <section class="breadcrumb-section set-bg" data-setbg={{ asset('img/image7.png') }}>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">

                        <div class="bt-option">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block body %}
    <style>
        body {
            background: #151515;
        }

        .page-title {
            color: #fff;
        }

        .btn-offre-action {
            font-size: 14px;
            padding: 8px 14px;
            border-radius: 8px;
            width: 110px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            transition: all 0.3s ease;
            background-color: #1f2937;
            border: 1px solid #3b82f6;
            color: #e0f2fe;
            box-shadow: inset 0 0 0 transparent;
        }

        .btn-offre-action i {
            font-size: 16px;
        }

        .btn-offre-action:hover {
            background-color: #1e40af;
            box-shadow: 0 0 10px #3b82f6, 0 0 5px #3b82f6;
            transform: translateY(-2px);
            color: #ffffff;
        }

        .btn-offre-action.btn-warning {
            border-color: #facc15;
            color: #fef3c7;
        }

        .btn-offre-action.btn-warning:hover {
            background-color: #ca8a04;
            box-shadow: 0 0 10px #facc15, 0 0 5px #facc15;
            color: #fff;
        }

        .btn-offre-action.btn-secondary {
            border-color: #94a3b8;
            color: #cbd5e1;
        }

        .btn-offre-action.btn-secondary:hover {
            background-color: #475569;
            box-shadow: 0 0 10px #94a3b8, 0 0 5px #94a3b8;
            color: #fff;
        }
    </style>

    <div class="container">
        <h1 class="page-title">{{ offre.nom }}</h1>

        <div class="card h-100 bg-dark border-secondary">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <p class="lead">{{ offre.description }}</p>
                        <dl class="row">
                            <dt class="col-sm-4">Date de validité :</dt>
                            <dd class="col-sm-8">{{ offre.duree_validite|date('d/m/Y') }}</dd>

                            <dt class="col-sm-4">État :</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">
                                    {{ offre.etat }}
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <h4 class="mt-4">Coachs associés</h4>
                <ul class="list-group">
                    {% for coach in offre.offrecoachs %}
                        <li class="list-group-item">
                            {{ coach.coach.nom }} -
                            Tarif : {{ coach.nouveauTarif }} € -
                            Réservations : {{ coach.reservationActuelle }}/{{ coach.reservationMax }}
                        </li>
                    {% endfor %}
                </ul>

                <h4 class="mt-4">Produits associés</h4>
                <ul class="list-group">
                    {% for produit in offre.offreproduits %}
                        <li class="list-group-item">
                            {{ produit.produit.nom }} -
                            Prix : {{ produit.nouveauPrix }} € -
                            Stock : {{ produit.quantiteVendue }}/{{ produit.quantiteMax }}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="card-footer d-flex gap-2 justify-content-end">
                <a href="javascript:history.back()" class="btn btn-secondary btn-offre-action">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>
{% endblock %}
