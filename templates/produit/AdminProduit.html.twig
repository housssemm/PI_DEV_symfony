{% extends 'base1.html.twig' %}

{% block body %}
    <style>
        body{
            background-color: #232323
        }
    </style>
    <section>
        <div class="container my-5">
            <h1 class="text-center mb-4 fs-4" style="color: #f36100; text-shadow: 2px 2px 4px rgba(255,255,255,0.38);">Liste des Produits</h1>
            <div class="row row-cols-1 row-cols-md-4 g-4" id="produitList" style="row-gap: 30px;">
                {% for produit in produits %}
                    <div class="col">
                        <div class="card h-100 text-center bg-dark text-light"
                             style="min-height: 350px; width: 109%; margin: auto; padding: 20px; border-radius: 12px; box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1); transition: transform 0.3s, box-shadow 0.3s; display: flex; flex-direction: column; align-items: center; justify-content: space-between;">
                            <img src="{{ asset('img/' ~ produit.image) }}"
                                 class="card-img-top" alt="{{ produit.nom }}"
                                 style="height: 120px; width: 100%; object-fit: contain; padding-top: 10px;">

                            <div class="card-body d-flex flex-column justify-content-center align-items-center" style="flex-grow: 1;">
                                <h5 class="card-title text-white">{{ produit.nom }}</h5>
                                <p class="text-light small"><strong>Description :</strong> {{ produit.description }}</p>
                                <p class="text-light small"><strong>Quantité :</strong> {{ produit.quantite }}</p>
                                <p class="text-light small"><strong>Prix :</strong> {{ produit.prix }} TND</p>
                                <p class="text-light small"><strong>État :</strong> {{ produit.etat }}</p>
                                <p class="text-light small"><strong>Investisseur de produit :</strong> {{ produit.investisseurproduit.nom }}</p>
                                <p class="text-light small"><strong>Catégorie :</strong> {{ produit.categorie ? produit.categorie.nom : 'Aucune catégorie' }}</p>
                            </div>

                            <div class="d-flex justify-content-center align-items-center w-100" style="gap: 10px; margin-top: 7px;">
                                <a href="{{ path('app_supprimer_produitAdmin', { id: produit.id }) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                    <i class="fa fa-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center text-light">Aucun produit trouvé.</p>
                {% endfor %}
            </div>
        </div>
    </section>

    <style>
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(255, 255, 255, 0.3);
        }

        .btn-orange {
            background-color: #f36100;
            color: white;
        }

        .btn-orange:hover {
            background-color: #d95400;
        }

        /* Ajouter un peu de padding entre les cartes */
        .card-body {
            padding: 15px;
        }

        /* Mettre un espacement entre les lignes de produits */
        #produitList {
            row-gap: 20px;
        }
    </style>
{% endblock %}
